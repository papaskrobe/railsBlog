
<div class="large-12 columns panel-post">

  <div class="row">
    <h3 class="post-title-link"><%= link_to @post.title, @post %></h3>
  </div>

  <div class="row">
    <p>Posted on: <%= @post.posted.strftime("%m/%d/%Y") %>
    <% if @post.updated_at.strftime("%Y/%m/%d") > @post.posted.strftime("%Y/%m/%d") %>
    <br><em>Updated on: <%= @post.updated_at.strftime("%m/%d/%Y") %></em>
  <% end %>
  </div>

  <div class="row">
    <%=raw @post.content_final %>
  </div>
</div>
